<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	<url>
		<loc><%= root_url %></loc>
		<changefreq>daily</changefreq>
		<priority>0.5</priority>
		<lastmod><%= Post.posted.recent(1).first&.updated_at&.strftime("%Y-%m-%d") %></lastmod>
	</url>
	<url>
		<loc><%= about_url %></loc>
		<changefreq>monthly</changefreq>
		<priority>0.5</priority>
	</url>
	<url>
		<loc><%= posts_url %></loc>
		<changefreq>daily</changefreq>
		<priority>0.5</priority>
	</url>
	<url>
		<loc><%= projects_url %></loc>
		<changefreq>weekly</changefreq>
		<priority>0.5</priority>
	</url>
	<url>
		<loc><%= cheat_sheets_url %></loc>
		<changefreq>weekly</changefreq>
		<priority>0.5</priority>
	</url>
	<% Tag.all.each do |tag| %>
	<url>
		<loc><%= tag_url(tag) %></loc>
		<changefreq>daily</changefreq>
		<priority>0.5</priority>
	</url>
	<% end %>
	<% Post.each_year_and_month do |year, month, last_updated_at| %>
	<url>
		<loc><%= archive_url(year, month) %></loc>
		<changefreq>monthly</changefreq>
		<priority>0.5</priority>
		<lastmod><%= last_updated_at.strftime("%Y-%m-%d") %></lastmod>
	</url>
	<% end %>
  <% Post.posted.each do |post| %>
	<url>
		<loc><%= post_url(post) %></loc>
		<changefreq>monthly</changefreq>
		<priority>0.5</priority>
		<lastmod><%= post.updated_at.strftime("%Y-%m-%d") %></lastmod>
	</url>
	<% end %>
</urlset>
