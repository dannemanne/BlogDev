<section>
  <h2>POPULAR TAGS</h2>
  <% popular_tags.each do |tag| %>
    <p><%= link_to tag.name, tag_path(tag), :title => "List all Posts tagged by #{tag.name}", :rel => "tag" %></p>
  <% end %>
  <p style="padding-top: 15px;"><%= link_to "View more Tags", tags_path, :title => "View more Tags" %></p>
</section>
