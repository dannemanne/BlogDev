<h1>Create new Post</h1>

<%= form_for @post do |f| %>

<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="field">
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :body %><br />
  <%= f.text_area :body, :cols => 70, :class => "mceEditor" %>
</div>

<div class="action">
  <%= f.submit "Save as Draft" %>
  <%= f.submit "Post", :name => "post_button" %>
</div>

<% end %>
